---
import type { Resume } from '@/content/config';

const { data } = Astro.props;
const { softskills } = data as Resume;
---

<ul>
  {
    softskills.map(({ name }) => (
      <li>
        <span>{name}</span>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background-color: var(--hover-background);
    color: var(--black-text);
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
