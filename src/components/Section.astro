---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 40px;
  }

  h2 {
    color: var(--black-text);
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.3rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 32px;
    }
  }
</style>
